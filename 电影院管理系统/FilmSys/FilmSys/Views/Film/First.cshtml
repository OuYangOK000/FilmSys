@using Microsoft.EntityFrameworkCore;
@model Admin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>影院管理系统</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <script src="~/js/JQuery.js"></script>
    <style type="text/css">
        #div_DH{
            width: 300px;
            height: 640px;
            border: 5px solid darkgray; 
            border-radius: 5px;
            float: left;
        }
        #div_right{
            margin-left: 30px;
            width: 70%;
            height: 640px;
            border: 5px solid darkgray;
            border-radius:5px;
            float: left;
        }
        #ul_DH{
            list-style: none;
            padding: 0;
            margin: 0;
        }
        #ul_DH li:hover{
            cursor:crosshair;
             background-color:#fbf1f1;
        }
        #ul_DH li{
            width: 300px;
            height: 50px;
            border-bottom: 1px solid black;
            background-color: darkgray;
            line-height: 50px;
            text-align: center;
            font-size: 26px;
        }
    </style>
</head>
<body>
    @if (Model != null)
    {
        <div style ="width: 100%;height: 40px;font-size: 20px;">
            <div style="float:left;width: 120px;">欢迎您，@Model.Name</div>
            <div style="width: 400px;margin-left: 42%;float: left;">当前时间：<span id="First_DateTime"></span></div>
            <div style="width: 23%;text-align: right;font-size: 22px;float: left;">影院管理系统</div>
        </div>
        <hr />
        <div id="div_DH">
            <ul id="ul_DH">
                <li onclick="">首页</li>
                <li onclick="TiaoZhuan_FM()">电影管理</li>
                <li onclick="TiaoZhuan_FMT()">电影厅管理</li>
                <li onclick="TiaoZhuan_EM()">员工管理</li>
                <li onclick="TiaoZhuan_US()">用户管理</li>
                <li>帮助</li>
                <li>关于</li>
                <li onclick="TuiChu()">退出系统</li>
            </ul>
        </div>
        <div id="div_right">

        </div>
    }
    else
    {
        <form asp-action="Login">
            <div>空空如也</div><br />
            <button type="submit">返回登录</button>
        </form>
    }
    <script>
        function TiaoZhuan(){
            
            $('#div_right').load("/Film/Login");
        }
        function TiaoZhuan_FM() {

            $('#div_right').load("/Film/FilmMain");
        }
        function TiaoZhuan_FMT() {

            $('#div_right').load("/Film/FilmT");
        }
        function TiaoZhuan_EM() {

            $('#div_right').load("/Employee/EmployeeMain");
        }
        function TiaoZhuan_US() {

            $('#div_right').load("/User/UserMain");
        }
        function TuiChu(){
            location.href="/Film/Login";
        }
    </script>
    <script type="text/javascript">
        function date_(){
            let date = document.getElementById("First_DateTime");
            date.innerText=""+new Date().toLocaleString();

            setTimeout(date_,1000);
        }
        date_()
    </script>
</body>
</html>
