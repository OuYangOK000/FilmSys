@model List<Film>
@{
    Layout = null;
}
<!DOCTYPE html>
<html >
<head>
    <title>电影管理</title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <style>
        #tb1{
            width: 100%;
            height: 490px;
            table-layout:fixed;
        }
        #tb1 tr,td,th{
            border: 1px solid gray;
            text-align:center;
        }
        #tb1 tr,td{
            height:40px;
        }
        #tb1 th{
            width:60px;
        }
        #div_input div {
            width: 200px;
            float: left;
            margin-left: 25px;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <form method="post">
        <div style="width:100%;height:150px;">
            <div id="div_input">
                <div>电影编号：   <input name="Filmid" /></div>
                <div>电影名称：   <input name="Fname" /></div>
                <div>类型编号：   <input name="id" /></div>
                <div>价格：       <input name="Money" /></div>
                <div>开始时间：   <input name="KSTime" /></div>
                <div>结束时间：   <input name="JSTime" /></div>
                <div>电影厅编号： <input name="FilmTid" /></div>
                <div>备注：       <input name="Remark" /></div>
            </div>
            <div style="margin-top:0;float:left;">
                <button type="submit" asp-action="AddFilm">添加电影</button>
                <button type="submit" asp-action="UpFilm">修改电影</button>
            </div>
        </div>
    </form>
    <div style="width:100%;height:490px;overflow:scroll">
        <table id="tb1"class="table">
            <thead>
                <tr>
                    <th>电影编号</th>
                    <th>电影名称</th>
                    <th>类型编号</th>
                    <th>价格</th>
                    <th>开始时间</th>
                    <th>结束时间</th>
                    <th>电影厅编号</th>
                    <th style="width:100px;">备注</th>
                    <th>操作</th>
                </tr>
            </thead>
                <tbody>
                    @foreach (var film in Model)
                    {
                        <tr>
                            <td> @film.Filmid </td>
                            <td> @film.Fname </td>
                            <td> @film.id </td>
                            <td> @film.Money </td>
                            <td> @film.KSTime </td>
                            <td> @film.JSTime </td>
                            <td> @film.FilmTid </td>
                            <td style="white-space: nowrap;text-overflow: ellipsis;overflow: hidden;">@film.Remark</td>
                            <td>
                                <a href="#" onclick="REMOVE(this.name)" name=@film.Filmid>删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
        </table>
    </div>
    <script>
        function REMOVE(id){
            if (confirm("你确定要删除吗？") == true) {
                location.href = "DelFilm?id="+id;
            }
            
        }
    </script>
</body>
</html>
